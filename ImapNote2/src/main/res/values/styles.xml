<?xml version="1.0" encoding="utf-8"?>
<resources>


    <color name="EditorMenuBgColor">@android:color/black</color>

    <color name="blue">#FFA6CAFD</color>
    <color name="white">#FFFFFFFF</color>
    <color name="yellow">#FFFFFFCC</color>
    <color name="pink">#FFFFCCCC</color>
    <color name="green">#FFCCFFCC</color>
    <color name="brown">#D1C3B7</color>
    <color name="grey">#f0f0f0</color>
    <color name="black">#000000</color>
    <color name="red">#990000</color>
    <color name="none">@color/yellow</color>

    <color name="TopBgColor">@color/brown</color>
    <color name="TopTxtColor">@color/white</color>

    <color name="ListBgColor">@color/yellow</color>
    <color name="ListTxtColor">@android:color/black</color>
    <color name="ListInfoTxtColor">#838383</color>

    <color name="StatusBgColor">@color/brown</color>
    <color name="StatusTxtColor">@color/white</color>

    <color name="AccountBgColor">@color/blue</color>
    <color name="AccountTxtColor">@android:color/black</color>


    <style name="ImapNotesTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/ListBgColor</item>
        <item name="android:colorBackground">@color/ListBgColor</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/TopBgColor</item>
        <item name="android:titleTextStyle">@style/Theme.MyAppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.MyAppTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/TopTxtColor</item>
    </style>

</resources>
