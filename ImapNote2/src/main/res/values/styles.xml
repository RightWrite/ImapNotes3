<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="TopBgColor">#8e5d25</color>
    <color name="TopTxtColor">@android:color/white</color>

    <color name="StatusBgColor">@android:color/black</color>
    <color name="StatusTxtColor">@android:color/white</color>


    <color name="EditorMenuBgColor">@android:color/black</color>

    <color name="BgBlue">#FFA6CAFD</color>
    <color name="BgWhite">#FFFFFFFF</color>
    <color name="BgYellow">#FFFFFFCC</color>
    <color name="BgPink">#FFFFCCCC</color>
    <color name="BgGreen">#FFCCFFCC</color>


    <color name="ListBgColor">@color/BgYellow</color>
    <color name="ListTxtColor">@android:color/black</color>
    <color name="ListInfoTxtColor">#838383</color>
    <color name="BgNone">@color/ListBgColor</color>

    <color name="AccountBgColor">@color/BgBlue</color>
    <color name="AccountTxtColor">@android:color/black</color>


    <style name="ImapNotesTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/ListBgColor</item>
        <item name="android:colorBackground">@color/ListBgColor</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/TopBgColor</item>
        <item name="android:titleTextStyle">@style/Theme.MyAppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.MyAppTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/TopTxtColor</item>
    </style>

</resources>
